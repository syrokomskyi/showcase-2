export async function getStaticPaths() {
  const { bcmsPublic } = await import("../../../bcms-public");
  const blogs = await bcmsPublic.entry.getAll("article");
  return blogs.map((e) => ({
    params: {
      slug: e.meta.en?.slug ?? "",
    },
  }));
}

const { slug } = Astro.params;

// Redirect to default country/language route
return Astro.redirect(`/germany/german/articles/${slug}/`);
