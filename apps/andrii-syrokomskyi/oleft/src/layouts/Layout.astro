---
import type {
    FontEntryMetaItem,
    FooterEntryMetaItem,
    ProfileEntryMetaItem,
    ThumbnailEntryMetaItem,
} from "../../bcms/types/ts";
import { bcmsPrivate } from "../bcms-private";
import Footer from "../components/layout/Footer";
import Header from "../components/layout/Header";
import { getEntrySlugMeta, getLanguageCode } from "../utils/localization";

let { title } = Astro.props;

const profileMeta = await getEntrySlugMeta<ProfileEntryMetaItem>(
    bcmsPrivate,
    "en",
    "profile",
);

const language =
    profileMeta.language.length > 0 ? profileMeta.language[0] : "English";
const languageCode = getLanguageCode(language);

if (!title) {
    title = profileMeta.title;
}

const thumbnailMeta = await getEntrySlugMeta<ThumbnailEntryMetaItem>(
    bcmsPrivate,
    languageCode,
    "thumbnail",
);
const ogImageUrl = thumbnailMeta.image?.url;

const fontMeta = await getEntrySlugMeta<FontEntryMetaItem>(
    bcmsPrivate,
    languageCode,
    "font",
);

const footerMeta = await getEntrySlugMeta<FooterEntryMetaItem>(
    bcmsPrivate,
    languageCode,
    "footer",
);
---

<!doctype html>
<html lang={languageCode}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={profileMeta.description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <meta property="og:image" content={ogImageUrl} />
        <meta property="og:image:secure_url" content={ogImageUrl} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:image" content={ogImageUrl} />
        <link rel="preconnect" href={fontMeta.preconnect} />
        <link
            rel="preconnect"
            href={fontMeta.crossorigin_preconnect}
            crossorigin
        />
        <link rel="stylesheet" href={fontMeta.stylesheet} />
        <title>{title}</title>
    </head>
    <body class="font-inter overflow-x-hidden bg-white">
        <div class="overflow-hidden flex flex-col min-h-screen">
            <Header />
            <main class="flex flex-col flex-1"><slot /></main>
            <Footer site={footerMeta.copyright_note} />
        </div>
    </body>
</html>

<style is:global>
    @import "../styles/article.css";

    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    *,
    *::before,
    *::after {
        @apply box-border m-0 p-0;
    }

    /* Transitions */
    .fade-enter-active,
    .fade-leave-active {
        transition: opacity 0.3s;
    }
    .fade-enter-from,
    .fade-leave-to {
        opacity: 0;
    }
</style>
