---
import type {
    FontEntryMetaItem,
    FooterEntryMetaItem,
    ProfileEntryMetaItem,
    ThumbnailEntryMetaItem,
} from "../../bcms/types/ts";
import { bcmsPrivate } from "../bcms-private";
import Footer from "../components/layout/Footer";
import Header from "../components/layout/Header";
import { getEntryMeta, getLanguageCode } from "../utils/localization";

const profileEntry = await bcmsPrivate.entry.getBySlug("profile", "profile");
const profileMeta = getEntryMeta<ProfileEntryMetaItem>(profileEntry, "en");
const language =
    profileMeta.language.length > 0 ? profileMeta.language[0] : "English";
const languageCode = getLanguageCode(language);
const title = profileMeta.title;

const thumbnailEntry = await bcmsPrivate.entry.getBySlug(
    "thumbnail",
    "thumbnail",
);
const thumbnailMeta = getEntryMeta<ThumbnailEntryMetaItem>(
    thumbnailEntry,
    languageCode,
);
const ogImageUrl = thumbnailMeta.image?.url;

const fontEntry = await bcmsPrivate.entry.getBySlug("font", "font");
const fontMeta = getEntryMeta<FontEntryMetaItem>(fontEntry, languageCode);

const footerEntry = await bcmsPrivate.entry.getBySlug("footer", "footer");
const footerMeta = getEntryMeta<FooterEntryMetaItem>(footerEntry, languageCode);
---

<!doctype html>
<html lang={languageCode}>
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Jumpstart your Astro project with this BCMS starter. Easily manage your content and scale your application without the backend hassle. Get started now!"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <meta property="og:image" content={ogImageUrl} />
        <meta property="og:image:secure_url" content={ogImageUrl} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:image" content={ogImageUrl} />
        <link rel="preconnect" href={fontMeta.preconnect} />
        <link
            rel="preconnect"
            href={fontMeta.crossorigin_preconnect}
            crossorigin
        />
        <link rel="stylesheet" href={fontMeta.stylesheet} />
        <title>{title}</title>
    </head>
    <body class="font-inter overflow-x-hidden bg-white">
        <div class="overflow-hidden flex flex-col min-h-screen">
            <Header />
            <main class="flex flex-col flex-1"><slot /></main>
            <Footer site={footerMeta.copyright_note} />
        </div>
    </body>
</html>

<style is:global>
    @import "../styles/article.css";

    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    *,
    *::before,
    *::after {
        @apply box-border m-0 p-0;
    }

    /* Transitions */
    .fade-enter-active,
    .fade-leave-active {
        transition: opacity 0.3s;
    }
    .fade-enter-from,
    .fade-leave-to {
        opacity: 0;
    }
</style>
